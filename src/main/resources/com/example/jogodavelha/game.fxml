            </Button>
            <Button id="bt-2-0" fx:id="button_2_0" layoutX="147.0" layoutY="11.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.columnIndex="2">
               <graphic>
                  <ImageView fx:id="img_2_0" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-0-1" fx:id="button_0_1" layoutX="284.0" layoutY="11.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.rowIndex="1">
               <graphic>
                  <ImageView fx:id="img_0_1" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-1-1" fx:id="button_1_1" layoutX="10.0" layoutY="148.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <graphic>
                  <ImageView fx:id="img_1_1" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-2-1" fx:id="button_2_1" layoutX="147.0" layoutY="148.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <graphic>
                  <ImageView fx:id="img_2_1" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-0-2" fx:id="button_0_2" layoutX="284.0" layoutY="148.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.rowIndex="2">
               <graphic>
                  <ImageView fx:id="img_0_2" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-1-2" fx:id="button_1_2" layoutX="10.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <graphic>
                  <ImageView fx:id="img_1_2" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-2-2" fx:id="button_2_2" layoutX="147.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <graphic>
                  <ImageView fx:id="img_2_2" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </GridPane>
      <Label id="turn-label" fx:id="LabelTurn" alignment="CENTER" contentDisplay="RIGHT" prefHeight="60.0" prefWidth="913.0" stylesheets="@style.css" text="Turn" textAlignment="CENTER">
         <graphic>
            <ImageView fx:id="imgViewTurn" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@icons/Xicon.png" />
               </image>
               <effect>
                  <ColorAdjust />
               </effect>
            </ImageView>
         </graphic>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
