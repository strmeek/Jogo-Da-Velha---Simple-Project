            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Button id="bt-0-0" fx:id="button_0_0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css">
               <graphic>
                  <ImageView fx:id="img_0_0" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button id="bt-1-0" fx:id="button_1_0" layoutX="10.0" layoutY="11.0" mnemonicParsing="false" onAction="#handleClicks" prefHeight="132.0" prefWidth="132.0" styleClass="bt-jogo-da-velha" stylesheets="@style.css" GridPane.columnIndex="1">
               <graphic>
                  <ImageView fx:id="img_1_0" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
