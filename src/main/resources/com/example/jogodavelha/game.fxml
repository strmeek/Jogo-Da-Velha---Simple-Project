      <HBox alignment="CENTER" spacing="520.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <HBox alignment="CENTER" prefHeight="105.0" prefWidth="105.0" spacing="520.0">
               <children>
                  <Button fx:id="buttonDarkMode" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" styleClass="bt-darkmode" stylesheets="@style.css">
                     <graphic>
                        <ImageView fx:id="imgViewDarkMode" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/lightmode.png" />
                           </image>
                           <effect>
                              <ColorAdjust />
                           </effect>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="105.0" prefWidth="105.0">
               <children>
                  <Button fx:id="buttonClose" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" styleClass="bt-darkmode" stylesheets="@style.css">
                     <graphic>
                        <ImageView fx:id="imgViewClose" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/Xicon.png" />
                           </image>
                           <effect>
                              <ColorAdjust />
                           </effect>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
